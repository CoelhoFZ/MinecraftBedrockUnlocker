# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.rs text eol=lf
*.toml text eol=lf
*.md text eol=lf
*.py text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Windows specific files
*.rc text eol=crlf
*.manifest text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.pdb binary
*.ico binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary
*.tar binary
*.gz binary

# Archives
*.7z binary
*.jar binary
*.rar binary

# GitHub Linguist - Force repository language detection
*.rs linguist-language=Rust
*.toml linguist-language=TOML
